- provide :body_class, "nav-md"

.right_col{:role => "main"}
  %div
    .page-title
      .title_left
        %h3= "Hi, #{@employee.username}"
      .clearfix

      .row
        .col-md-12.col-sm-12.col-xs-12
          .x_panel
            .x_content
              %br/
              = form_for(@employee, html: { class: "form-horizontal form-label-left" }) do |f|
                = render "shared/error_messages", object: @employee

                %h4= t(:profile)
                .ln_solid
                - %i(first_name middle_name last_name).each do |field|
                  .form-group
                    %label.control-label.col-md-3.col-sm-3.col-xs-12{:for => field}
                      = t(field)
                    .col-md-3.col-sm-3.col-xs-12
                      %input.form-control.col-md-7.col-xs-12{:type => "text", :name => "employee[#{field}]", :value => @employee.public_send(field)}/
                .form-group
                  %label.control-label.col-md-3.col-sm-3.col-xs-12{:for => "dob"}
                    = t(:dob)
                  .col-md-3.col-sm-3.col-xs-12
                    %input.form-control.col-md-7.col-xs-12{:type => "text", :name => "employee[dob]", :value => @employee.dob}/

                .form-group
                  %label.control-label.col-md-3.col-sm-3.col-xs-12{:for => "gender"}
                    = t(:gender)
                  .col-md-3.col-sm-3.col-xs-12
                    .radio
                      Bar
                      .iradio_flat-green
                        %input.flat{:name => "iCheck", :type => "radio"}/
                        %ins.iCheck-helper

                %h4= t(:contact)
                .ln_solid
                - %i(line1 line2 county city country postcode mobile).each do |field|
                  .form-group
                    %label.control-label.col-md-3.col-sm-3.col-xs-12{:for => field}
                      = t(field)
                    .col-md-3.col-sm-3.col-xs-12
                      %input.form-control.col-md-7.col-xs-12{:type => "text", :name => "employee[#{field}]", :value => @employee.public_send(field)}/

                %h4= t(:company_profile)
                .ln_solid
                .form-group
                  %label.control-label.col-md-3.col-sm-3.col-xs-12{:for => "title"}
                    = t(:title)
                  .col-md-3.col-sm-3.col-xs-12
                    %input.form-control.col-md-7.col-xs-12{:type => "text", :name => "employee[title]", :value => @employee.title}/
                .form-group
                  %label.control-label.col-md-3.col-sm-3.col-xs-12{:for => "department"}
                    = t(:department)
                  .col-md-3.col-sm-3.col-xs-12
                    %input.form-control.col-md-7.col-xs-12{:type => "text", :name => "employee[department_id]", :value => @employee.department.try(:name)}/

                .ln_solid
                .form-group
                  .col-md-6.col-sm-6.col-xs-12.col-md-offset-3
                    %button.btn.btn-success{:type => "submit"} Submit

= javascript_include_tag "bootstrap-datetimepicker.min"

:javascript
  $(document).ready(function(){
    var startPicker = $('#start');
    var endPicker = $('#end');

    startPicker.datetimepicker({
      format: 'YYYY-MM-DD h:mm A',
      useCurrent: false
    });

    endPicker.datetimepicker({
      format: 'YYYY-MM-DD h:mm A',
      useCurrent: false
    });

    startPicker.click(function(){
      $(this).datetimepicker('show');
    });

    endPicker.click(function(){
      $(this).datetimepicker('show');
    });

    startPicker.on('dp.change', function (e) {
      endPicker.data('DateTimePicker').minDate(e.date);
    });

    endPicker.on('dp.change', function (e) {
      var startDate = startPicker.datetimepicker('date');
      if (startDate == null) {
        startPicker.data('DateTimePicker').maxDate(e.date);
      } else {
        $('#days').val(daydiff(startDate, e.date));
      }
    });
  });
