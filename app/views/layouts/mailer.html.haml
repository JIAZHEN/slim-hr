!!!
%html
  %head
    %title= yield(:email_title)
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/
    %meta{:content => "IE=edge", "http-equiv" => "X-UA-Compatible"}/
  = yield

  %tr
    %td{:align => "center", :bgcolor => "#ffffff", :style => "padding: 20px 0px;"}
      /[if (gte mso 9)|(IE)]
        <table align="center" border="0" cellspacing="0" cellpadding="0" width="500">
        <tr>
        <td align="center" valign="top" width="500">
      / UNSUBSCRIBE COPY
      %table.responsive-table{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :style => "max-width: 500px;", :width => "100%"}
        %tr
          %td{:align => "center", :style => "font-size: 12px; line-height: 18px; font-family: Helvetica, Arial, sans-serif; color:#666666;"}
            = t(:company_address)
            %br/
            %a{:href => root_url, :style => "color: #666666; text-decoration: none;", :target => "_blank"}= t(".view_email_in_browser")
