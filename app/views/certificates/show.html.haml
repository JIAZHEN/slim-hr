- provide :body_class, "nav-md"

.right_col{:role => "main"}
  %div
    .page-title
      .title_left
        %h3= @certificate.name
      .title_right
        .col-md-5.col-sm-5.col-xs-12.form-group.pull-right.top_search
          = link_to "<i class='fa fa-trash-o'></i> Delete ".html_safe, @certificate, method: :delete, data: { confirm: "Are you sure to delete #{@certificate.name}?" }, class: "btn btn-danger btn-xs"
      .clearfix

      .row
        .col-md-12.col-sm-12.col-xs-12
          .x_panel
            .x_content
              .row
                .col-md-6.col-sm-6.col-xs-12
                  %p Document type
                  %h2
                    %i.fa.file-o
                    = @certificate.doc_type.name
                .col-md-6.col-sm-6.col-xs-12
                  %p Expiry date
                  %h2
                    %i.fa.fa-calendar-check-o
                    = @certificate.expiry_date
                .col-md-6.col-sm-6.col-xs-12
                  %p File
                  %h2
                    %i.fa.fa-download
                    = link_to @certificate.file_file_name, @certificate.file.url
