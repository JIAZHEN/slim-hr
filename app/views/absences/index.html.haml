- provide :body_class, "nav-md"

.right_col{:role => "main"}
  .row
    .col-md-12.col-sm-12.col-xs-12
      = will_paginate @absences, renderer: BootstrapPagination::Rails

    .col-md-12.col-sm-12.col-xs-12
      .x_panel
        .x_title
          %h2
            Absences
            - if current_user.admin?
              %small
                %a.btn.btn-xs.btn-info{:href => new_absence_path} Add
          %ul.nav.navbar-right.panel_toolbox
            %li
              %a.collapse-link
                %i.fa.fa-chevron-up
            %li
              %a.close-link
                %i.fa.fa-close
          .clearfix
        .x_content
          %table.table.table-hover
            %thead
              %tr
                %th Status
                %th Type
                %th Start date
                %th End date
                %th Days
                %th Created at
                - if current_user.admin?
                  %th Edit
            %tbody
              - @absences.each do |absence|
                %tr
                  %td= absence.status.name
                  %td= absence.type.name
                  %td= absence.start.localtime.strftime("%Y-%m-%d %H:%M:%S")
                  %td= absence.end.localtime.strftime("%Y-%m-%d %H:%M:%S")
                  %td= absence.days
                  %td= absence.created_at.localtime.strftime("%Y-%m-%d %H:%M:%S")
                  - if current_user.admin?
                    %td
                      %a.btn.btn-info.btn-xs{:href => edit_absence_path(absence)}
                        %i.fa.fa-pencil
                        Edit

    .col-md-12.col-sm-12.col-xs-12
      = will_paginate @absences, renderer: BootstrapPagination::Rails
