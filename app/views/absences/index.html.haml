- provide :body_class, "nav-md"

.right_col{:role => "main"}
  .row
    .col-md-12.col-sm-12.col-xs-12
      = will_paginate @absences, renderer: BootstrapPagination::Rails

    .col-md-12.col-sm-12.col-xs-12
      .x_panel
        .x_title
          %h2
            Absences
            - if current_user.admin?
              %small
                %a.btn.btn-xs.btn-info{:href => new_absence_path} Add
          %ul.nav.navbar-right.panel_toolbox
            %li
              %a.collapse-link
                %i.fa.fa-chevron-up
            %li
              %a.close-link
                %i.fa.fa-close
          .clearfix
        .x_content
          %table.table.table-hover
            %thead
              %tr
                %th Status
                %th Type
                %th Start date
                %th End date
                %th Days
                %th Comments
                - if current_user.admin?
                  %th Actions

            %tbody
              - @absences.each do |absence|
                %tr
                  %td
                    .label{class: "label-#{label_colour(absence)}"}
                      = absence.status.name.titleize
                  %td= absence.type.name.titleize
                  %td= local_time(absence.start)
                  %td= local_time(absence.end)
                  %td= absence.days
                  %td= absence.comments
                  - if current_user.admin?
                    %td
                      %a.btn.btn-info.btn-xs{:href => edit_absence_path(absence)}
                        %i.fa.fa-pencil
                        Edit
                      = link_to "<i class='fa fa-check'></i> Approve ".html_safe, absence_admin_action_path(absence, status: AbsenceStatus::APPROVED), method: :post, data: { confirm: "Are you sure to approve?" }, class: "btn btn-success btn-xs"
                      = link_to "<i class='fa fa-times'></i> Cancel ".html_safe, absence_admin_action_path(absence, status: AbsenceStatus::CANCELLED), method: :post, data: { confirm: "Are you sure to cancel?" }, class: "btn btn-warning btn-xs"
                      = link_to "<i class='fa fa-ban'></i> Reject ".html_safe, absence_admin_action_path(absence, status: AbsenceStatus::REJECTED), method: :post, data: { confirm: "Are you sure to reject?" }, class: "btn btn-danger btn-xs"

    .col-md-12.col-sm-12.col-xs-12
      = will_paginate @absences, renderer: BootstrapPagination::Rails
