- flash.each do |message_type, message|
  %div{:class => "flash-alert alert alert-#{alert_class_for(message_type)} alert-dismissible fade in", :role => "alert"}
    %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
      %span{"aria-hidden" => "true"} Ã—
    = message

- unless flash.empty?
  :javascript
    $(".flash-alert").fadeTo(2000, 500).slideUp(1000, function(){
      $(this).alert('close');
    });
